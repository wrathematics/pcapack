citHeader("To cite ffpca in a publication use:")

citEntry(
  entry = "Misc",
  title = "ffpca:  First Few Principal Components",
  author = personList(as.person("Drew Schmidt"),
                      as.person("George Ostrouchov"),
                      as.person("Christian Heckendorf")),
  year = "2012",
  note = "{R} Package",
  url = "http://cran.r-project.org/package=ffpca",
  textVersion = "Schmidt, D. and Ostrouchov, G., with contributions from Heckendorf, C. (2013) ffpca: First Few Principal Components. R Package, URL http://cran.r-project.org/package=ffpca",
  key = "Schmidt2013ffpcapackage"
)

